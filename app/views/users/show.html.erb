<%= render @user %>

<div class="user-bio">
    <h4>Bio</h4>
    <p> <%= @user.bio %> </p>
</div>

<div class="user-posts">
    <h3>Posts</h3>
    <% @user.three_most_recent_posts.each do |post| %>
        <%= link_to user_post_path(@user.id, post.id), {:class => "link_class"} do %>
            <%= render post %>
        <% end %>
    <% end %>
</div>

<div class="btn-container">
    <button class="see-all-btn">
        <%= link_to 'See all posts', user_posts_path(@user) %>
    </button>
</div>