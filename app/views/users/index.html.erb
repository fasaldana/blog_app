<% @users.each do |user| %>
    <div class="user-container">
        <div class="user-avatar">
            <img src="<%= user.photo %>" alt="<%= user.name %>" class="user-pic">
        </div>

        <div class="user-info">
            <div class="user-name">
                <h2>User name: <%= user.name %></h2>
            </div>
            <div class="num-posts">
                <p> number of posts: <%= user.posts_counter %> </p>
            </div>
        </div>
    </div>
<% end %>