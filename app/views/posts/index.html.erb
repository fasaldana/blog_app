<%= render @user %>

<% @posts.each do |post| %>
  <%= link_to user_post_path(@user.id, post.id), {:class => "link_class"} do %>
    <%= render post %>
  <% end %>

  <div class="comments">
    <% post.five_most_recent_comments.includes([:author]).each do |comment| %>
      <div class="comment-container">
        <div class="comment-body">
          <p> <%= comment.author.name %> - <%= comment.text %> </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="btn-container">
    <button class="see-all-btn">
        <li class="link_list_li"><%= link_to "Create Post", new_post_path, class: "link_class" %></li>
    </button>
</div>