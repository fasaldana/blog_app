<%= form_with model: @post, class: "form" do |form| %>
  <div class="form-container">
    <h2> Create a new post </h2>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "post title..." %>
    <%= form.label :text %>
    <%= form.text_area :text, placeholder: "post text..." %>
    <%= form.submit "Create Post" %>
  </div>
<% end %>